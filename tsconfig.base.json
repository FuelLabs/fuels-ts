{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "module": "NodeNext", // TODO: Review setting and packages `exports`
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "sourceMap": true
  },
  "exclude": ["**/dist", "**/build", "node_modules", "**/**/node_modules"]
}
