{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2019"],
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["**/dist", "**/build", "node_modules", "**/**/node_modules"]
}
